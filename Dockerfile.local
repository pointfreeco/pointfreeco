FROM norionomura/swift:41

# postgres
RUN apt-get update
RUN apt-get install -y postgresql libpq-dev

ENV OSS 1
WORKDIR /app

COPY .build/dependencies-state.json ./.build/dependencies-state.json
COPY .env ./
COPY Makefile ./
COPY Package.swift ./
COPY Packages ./Packages
COPY Sources ./Sources
COPY Tests ./Tests

# cmark
RUN make linux-install-cmark

RUN swift package update
RUN swift build --target Server --configuration release
CMD swift run Server --configuration release
